# Development Dockerfile with hot reloading
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm ci

# Copy source and config files
COPY src/ ./src/
COPY tests/ ./tests/
COPY tsconfig.json ./
COPY jest.config.js ./

# Expose port
EXPOSE 40999

# Start development server with hot reload
CMD ["npm", "run", "dev"]