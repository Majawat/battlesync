{
  "name": "battlesync",
  "version": "2.7.0",
  "description": "Simple OPR Battle Tracker - Clean v2 rewrite",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t battlesync:latest .",
    "docker:run": "docker run -p 4019:4019 battlesync:latest",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:dev": "docker compose -f docker-compose.dev.yml up",
    "docker:logs": "docker compose logs -f"
  },
  "keywords": [
    "opr",
    "battle",
    "tracker",
    "gaming"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/sqlite3": "^3.1.11",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@types/supertest": "^6.0.2",
    "jest": "^30.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
